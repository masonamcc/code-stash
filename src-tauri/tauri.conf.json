{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CodeStash",
  "version": "1.0.905",
  "identifier": "CodeStash",

  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000"
  },

  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/masonamcc/code-stash/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "YOUR_PUBKEY_HERE"
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/code-stash-icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
