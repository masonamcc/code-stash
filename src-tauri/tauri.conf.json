{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CodeStash",
  "version": "1.0.0",
  "identifier": "CodeStash",

  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },



  "app": {
    "windows": [
      {
        "title": "CodeStash",
        "width": 900,
        "height": 720,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/code-stash-icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
